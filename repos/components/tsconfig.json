{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "paths": {
      "@CPAC/components": ["src/components"],
      "@CPAC/components/*": ["src/components/*"],
      "@CPAC/constants": [ "src/constants" ],
      "@CPAC/constants/*": [ "src/constants/*" ],
      "@CPAC/hooks": [ "src/hooks" ],
      "@CPAC/hooks/*": [ "src/hooks/*" ],
      "@CPAC/src": ["src"],
      "@CPAC/src/*": ["src/*"],
      "@CPAC/utils": ["src/utils"],
      "@CPAC/utils/*": ["src/utils/*"],
      "@keg-hub/jsutils": ["node_modules/@keg-hub/jsutils/build/esm"],
      "@keg-hub/jsutils/*": ["node_modules/@keg-hub/jsutils/build/esm/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
