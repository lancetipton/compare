{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "esnext",
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "module": "esnext",
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "vitest/globals"],
    "paths": {
      "@LKR/actions": ["src/actions"],
      "@LKR/actions/*": ["src/actions/*"],
      "@LKR/constants": [ "src/constants" ],
      "@LKR/constants/*": [ "src/constants/*" ],
      "@LKR/reducers": [ "src/reducers" ],
      "@LKR/reducers/*": [ "src/reducers/*" ],
      "@LKR/services": [ "src/services" ],
      "@LKR/services/*": [ "src/services/*" ],
      "@LKR/src": ["src"],
      "@LKR/src/*": ["src/*"],
      "@LKR/store": [ "src/store" ],
      "@LKR/store/*": [ "src/store/*" ],
      "@LKR/types": ["src/types"],
      "@LKR/types/*": ["src/types/*"],
      "@LKR/utils": ["src/utils"],
      "@LKR/utils/*": ["src/utils/*"],
      "@LKR/workers": ["src/workers"],
      "@LKR/workers/*": ["src/workers/*"],
      "@keg-hub/jsutils": ["node_modules/@keg-hub/jsutils/build/esm"],
      "@keg-hub/jsutils/*": ["node_modules/@keg-hub/jsutils/build/esm/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
